<h1>Editing Book</h1>
<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error prohibited this product from being saved</h2>
    <ul>
      <% if @book.errors.include?(:title) %>
        <li>
         <%= @book.errors.full_messages_for(:title).first %>
      <% end %>
        </li>
      <% if @book.errors.include?(:body) %>
        <li>
         <%= @book.errors.full_messages_for(:body).first %>
      <% end %>
        </li>
    </ul>
  </div>
<% end %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
